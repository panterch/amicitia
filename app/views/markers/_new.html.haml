-remote_form_for(@marker) do |f|
  =f.error_messages
  =f.hidden_field :lng
  =f.hidden_field :lat
  =f.label :title
  =f.text_field :title
  %br
  =f.label :body
  =f.text_field :body
  %br
  =f.label :email
  =f.text_field :email
  %br
  =f.label :date
  =f.date_select(:date, :order => [:day, :month, :year])
  %br
  =f.submit
